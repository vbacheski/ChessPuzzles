<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    package="com.fict.chesspuzzle">

    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:name=".App"
        android:allowBackup="true"
        android:dataExtractionRules="@xml/data_extraction_rules"
        android:fullBackupContent="@xml/backup_rules"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.ChessPuzzle">

        <activity
            android:name=".tutorial.TutorialsListActivity"
            android:screenOrientation="portrait"
            android:exported="true">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".PuzzleListActivity"
            android:exported="true"
            android:screenOrientation="portrait"
            android:theme="@style/Theme.MyApplication" />
        <activity
            android:name=".tournament.TournamentComposeActivity"
            android:exported="true"
            android:screenOrientation="portrait"
            />
        <activity
            android:name=".setupposition.SetupPositionActivity"
            android:exported="true"
            />
        <activity
            android:name=".leaderboard.LeaderboardComposeActivity"
            android:exported="true"
            android:screenOrientation="portrait"
            />
        <activity
            android:name=".tournament.JoinTournamentActivity"
            android:exported="true"
            android:screenOrientation="portrait"
            />
        <activity
            android:name=".register_login.RegisterFormActivity"
            android:exported="true"
            android:screenOrientation="portrait"
            />
        <activity
            android:name=".register_login.LoginFormActivity"
            android:exported="true"
            android:screenOrientation="portrait"
            />
        <activity
            android:name=".tutorial.TutorialDetailActivity"
            android:exported="true"
            android:screenOrientation="portrait"
            />

    </application>

</manifest>